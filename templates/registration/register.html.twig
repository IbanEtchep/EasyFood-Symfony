{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1>S'inscrire</h1>
    <div style="margin-top:20px;"class="mask d-flex align-items-center gradient-custom-3">
      <div class="container">
        <div class="row d-flex justify-content-center align-items-center">
          <div class="col-12 col-md-9 col-lg-7 col-xl-6">
            <div class="card" style="border-radius: 15px;">
              <div class="card-body p-5">
                <h2 class="text-uppercase text-center mb-5">Inscription</h2>

                {{ form_start(registrationForm) }}

                  <div class="form-outline mb-4">
                  {{ form_widget(registrationForm.nomU,{'attr':{'class':'form-control form-control-lg'}}) }}
                    <label class="form-label">{{ form_label(registrationForm.nomU) }}</label>
                  </div>

                  <div class="form-outline mb-4">
                    {{ form_widget(registrationForm.prenomU,{'attr':{'class':'form-control form-control-lg'}}) }}
                    <label class="form-label">{{ form_label(registrationForm.prenomU) }}</label>
                  </div>

                  <div class="form-outline mb-4">
                    {{ form_widget(registrationForm.mailU,{'attr':{'class':'form-control form-control-lg'}}) }}
                    <label class="form-label">{{ form_label(registrationForm.mailU) }}</label>
                  </div>
                  
                  <div class="form-outline mb-4">
                    {{ form_widget(registrationForm.numAdrC,{'attr':{'class':'form-control form-control-lg'}}) }}
                    <label class="form-label">{{ form_label(registrationForm.numAdrC) }}</label>
                  </div>
                  <div class="form-outline mb-4">
                    {{ form_widget(registrationForm.rueC,{'attr':{'class':'form-control form-control-lg'}}) }}
                    <label class="form-label">{{ form_label(registrationForm.rueC) }}</label>
                  </div>
                  <div class="form-outline mb-4">
                    {{ form_widget(registrationForm.cpC,{'attr':{'class':'form-control form-control-lg'}}) }}
                    <label class="form-label">{{ form_label(registrationForm.cpC) }}</label>
                  </div>
                  <div class="form-outline mb-4">
                    {{ form_widget(registrationForm.villeC,{'attr':{'class':'form-control form-control-lg'}}) }}
                    <label class="form-label">{{ form_label(registrationForm.villeC) }}</label>
                  </div>

                  <div class="form-outline mb-4">
                    {{ form_widget(registrationForm.plainPassword) }}
                    <label class="form-label">{{ form_label(registrationForm.plainPassword) }}</label>
                  </div>

                  <div class="form-outline mb-4">
                    {{ form_widget(registrationForm.agreeTerms) }}
                    <label class="form-label">{{ form_label(registrationForm.agreeTerms) }}</label>
                  </div>

                  <div class="d-flex justify-content-center">
                    <input type="submit" value="Valider l'inscription" class="btn btn-outline-dark">
                  </div>
                {{ form_end(registrationForm) }}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
