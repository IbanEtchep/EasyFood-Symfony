
{% extends 'base.html.twig' %}

{% block title %}
    Ajouter un plat
{% endblock %}

{% block body %}
    <div class="container p-3 my-3 border">
        
        <h2>Ajouter un plat</h2>
        {% form_theme form 'bootstrap_5_layout.html.twig' %}        
        {{ form_start(form) }}
        {{ form_label(form.nomP, "Nom du plat") }}{{ form_widget(form.nomP) }}
        {{ form_label(form.prixFournisseurP, "Prix fournisseur") }}{{ form_widget(form.prixFournisseurP) }}
        {{ form_label(form.prixClientP, "Prix client") }}{{ form_widget(form.prixClientP) }}
        {{ form_label(form.descriptionP, "Description") }}{{ form_widget(form.descriptionP) }}
        {{ form_label(form.leTypePlat, "Type du plat") }}{{ form_widget(form.leTypePlat) }}
        {% do form.image.setRendered() %}
        <input type="submit"/>
        {{ form_end(form) }}
    </div>
    
{% endblock %}
