{% extends 'base.html.twig' %}

{% block title %}
    Nouveau type de plat
{% endblock %}

{% block body %}
    <div class="container p-3 my-3 border">
        <h2>Création d'un type de plat</h2>
        {% form_theme form 'bootstrap_4_layout.html.twig' %}
        {{ form_start(form) }}
        {{ form_label(form.libelleType,"Libellé du type de plat") }} {{ form_widget(form.libelleType) }}<br >
        {{ form_widget(form) }}

        <input type="submit" class="btn btn-primary"/>
        {{ form_end(form) }}
    </div>

{% endblock %}
